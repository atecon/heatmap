set verbose off
include heatmap.gfn
clear

# polyglot labels
ilabs = defarray("uno", "due", "tre", "quattro", "cinque", "sei")
flabs = defarray("un", "deux", "trois", "quatre", "cinq")
r = nelem(ilabs)
c = nelem(flabs)
Mat = I(r,c) - 0.2 * exp( 0.3 * abs(seq(1,c) .- seq(1,r)'))
cnameset(Mat, flabs)
rnameset(Mat, ilabs)
print Mat
heatmap(Mat, defbundle("title", "Just a title", "zerowhite", 1, "do_labels", 1, 
  "ylabel", "Italiano", "xlabel", "Fran√ßais"))

